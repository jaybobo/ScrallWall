<%= javascript_include_tag :upload %>

<div class="container home">
  <div id="home-logo">
  <% if mobile_device? %><%= image_tag "/images/scrallwall_rev.png" %><% end %>
  </div>
  <div id="headings">
    <h1>Community Curated<br>Beautification</h1>
  </div>

  <%= render "layouts/uploader" %>

  <div id="icons">
    <div class="inner">
      <div class="icon-box">
        <%= image_tag "/images/icon_2633_rev.png", class: "icon", id: "upload" %>
        <h2>upload</h2>
      </div>
      <div class="icon-box">
        <a href="/artifacts/explore">
          <%= image_tag "/images/icon_28731_rev.png", class: "icon", id: "explore" %>
        </a>
        <h2>explore</h2>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('body').addClass('home-page');
  })
</script>

